<hr class="mt-0">
<div class="row">
    <div class="col-md-8 blog-main">
        {% for post in posts %}
            <div class="blog-post">
                <h2 class="blog-post-title">
                    {{ post.title }}
                </h2>
                <p class="blog-post-meta">{{ post.createdAt | date }} by <a href="#">Mark</a></p>
                <p>{{ post.excerpt }}</p>
                <a href="{{ path('blog_post_show', {'alias': post.alias}) }}">Read more...</a>
            </div>
        {% endfor %}
        <nav class="blog-pagination">
            <a class="btn btn-outline-primary" href="#">Older</a>
            <a class="btn btn-outline-secondary disabled" href="#">Newer</a>
        </nav>

    </div><!-- /.blog-main -->

    {% include 'sidebar/index.html.twig' %}

</div><!-- /.row -->